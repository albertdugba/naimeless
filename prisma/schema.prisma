generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DB_URL")
}

model Post {
  id          Int       @id @default(autoincrement())
  message     String
  published   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt()
  author      String
  channelName String?
  photos      Photo[]
  vote        Vote?
  comments    Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  post      Post?    @relation(fields: [postId], references: [id])
  postId    Int?
  replies   Reply[]
  commentId Int?
}

model Reply {
  id        Int     @id @default(autoincrement())
  body      String
  comment   Comment @relation(fields: [commentId], references: [id])
  commentId Int
}

model Vote {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  postId    Int      @unique
  post      Post     @relation(fields: [postId], references: [id])
  isUpvote  Boolean
  value     Int      @default(0)
}

model Photo {
  id                 Int      @id @default(autoincrement())
  url                String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt()
  cloudinaryPublicId String
  width              Int
  height             Int
  post               Post     @relation(fields: [postId], references: [id])
  postId             Int
}
